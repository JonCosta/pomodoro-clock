@import url('https://fonts.googleapis.com/css?family=Baloo+Bhaina');

$color-bg = #05668d
$color-footer = #f58a07
$color-jumbo = #333
$color-font = #f0f0c9
$color-start = #4cb944
$color-stop = #f58a07
$color-reset = #5390d1

// Radial Progress variables -------
$circle-background = #f0f0c9
$circle-color = tomato
$circle-size = 400px
$transition-length = 1s
$inset-size = 330px
$inset-color = #f0f0c9
$circle-size-min = 250px
$inset-size-min = 200px

$font-title = 'Baloo Bhaina', cursive


html {
    min-height: 100%
    position: relative
}

body {
    background-color: $color-bg
    margin-bottom: 50px
}

.block {
    background-color: $color-jumbo
    margin-top: 20px

    .block__title {
        color: $color-font
        font-family: $font-title
        font-size: 80px
        text-align: center
    }

    .block__time {
        color: $color-font
        font-size: 120px
        font-family: $font-title
        margin-top: auto
        line-height: $inset-size
        text-align: center
    }

    @media screen and (max-width: 480px) {
        .block__title {
            font-size: 50px
        }
        .block__time {
            font-size: 70px
            line-height: $inset-size-min
        }
    }

    .btn__start,
    .btn__stop,
    .btn__reset {
        color: $color-font
        font-size: 20px
        padding: 15px 15px        
    }
    
    @media screen and (max-width: 480px) {
        .btn__start,
        .btn__stop,
        .btn__reset {
            font-size: 15px        
        }

    }

    .btn__start {
        background-color: $color-start
    }

    .btn__stop {
        background-color: $color-stop
    }

    .btn__reset {
        background-color: $color-reset
    }

}

.radial-progress {

    background-color: $circle-background
    border-radius: 50%
    height: $circle-size
    width: $circle-size
    margin: 0 auto 40px auto

    .circle {
        .mask, .fill {
            border-radius: 50%
            height: $circle-size
            position: absolute
            width: $circle-size
        }

        .fill {
            background-color: $circle-color;
            transition: -webkit-transform $transition-length;
            transition: -ms-transform $transition-length;
            transition: transform $transition-length;
            -webkit-backface-visibility: hidden
        }

        .mask {
            clip: rect(0px, $circle-size, $circle-size, $circle-size/2);
            .fill {
                clip: rect(0px, $circle-size/2, $circle-size, 0px);                
            }
        }
    }
    .inset {
        width: $inset-size
        height: $inset-size
        position: absolute
        margin-left: (($circle-size - $inset-size) / 2)
        margin-top: (($circle-size - $inset-size) / 2)
        background-color: $color-jumbo
        border-radius: 50%
    }

} // endof .radial-progress

@media screen and (max-width: 480px) {
    
    .radial-progress {

        height: $circle-size-min
        width: $circle-size-min

        .circle {
            .mask, .fill {
                height: $circle-size-min
                width: $circle-size-min
            }

            .fill {
                background-color: $circle-color;
                transition: -webkit-transform $transition-length;
                transition: -ms-transform $transition-length;
                transition: transform $transition-length;
            }

            .mask {
                clip: rect(0px, $circle-size-min, $circle-size-min, $circle-size-min/2);
                .fill {
                    clip: rect(0px, $circle-size-min/2, $circle-size-min, 0px);                
                }
            }
        }
        .inset {
            background-color: $color-jumbo
            border-radius: 50%
            height: $inset-size-min
            position: absolute
            margin-left: (($circle-size-min - $inset-size-min) / 2)
            margin-top: (($circle-size-min - $inset-size-min) / 2)
            width: $inset-size-min
        }
    }
} // endof media

.audio {
    display: none
}


// FOOTER Section ----------/
.footer {
    background-color: $color-footer
    bottom: 0
    width: 100%
    position: absolute

    .footer__text {
        color: $color-font
        margin: 0 auto
        padding: 15px 15px
        text-align: center
    }
}


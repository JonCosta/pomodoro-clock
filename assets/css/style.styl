@import url('https://fonts.googleapis.com/css?family=Baloo+Bhaina');

$color-bg = #05668d
$color-footer = #f58a07
$color-jumbo = #333
$color-font = #f0f0c9
$color-start = #4cb944
$color-stop = #f58a07
$color-reset = #5390d1

$font-title = 'Baloo Bhaina', cursive


html {
    min-height: 100%
    position: relative
}

body {
    background-color: $color-bg
    margin-bottom: 50px
}

.block {
    background-color: $color-jumbo
    margin-top: 20px

    .block__title {
        color: $color-font
        font-family: $font-title
        font-size: 80px
        text-align: center
    }

    .block__time {
        color: $color-font
        font-size: 120px
        font-family: $font-title
        margin: 40px 0
        text-align: center
    }

    @media screen and (max-width: 480px) {
        .block__title {
            font-size: 50px
        }
        .block__time {
            font-size: 70px
        }
    }

    .btn__start,
    .btn__stop,
    .btn__reset {
        color: $color-font
        font-size: 20px
        padding: 15px 15px        
    }

    .btn__start {
        background-color: $color-start
    }

    .btn__stop {
        background-color: $color-stop
    }

    .btn__reset {
        background-color: $color-reset
    }

}


// FOOTER Section ----------/
.footer {
    background-color: $color-footer
    bottom: 0
    width: 100%
    position: absolute

    .footer__text {
        color: $color-font
        margin: 0 auto
        padding: 15px 15px
        text-align: center
    }
}
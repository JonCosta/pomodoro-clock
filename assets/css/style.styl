.audio {
    display: none
}


// FOOTER Section ----------/
.footer {
    background-color: $color-footer
    bottom: 0
    width: 100%
    position: absolute

    .footer__text {
        color: $color-font
        margin: 0 auto
        padding: 15px 15px
        text-align: center
    }
}

